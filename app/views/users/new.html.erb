<section class="jumbotron text-center">
    <div class="container">

<h1> Sign Up </h1>
<%= form_with model:@user, local: :true do |f|%>
    <%= f.label :username%><br>
    <%= f.text_field :username, class: @user.errors.any? ? "custom_errors" : nil %><br>
    <%= f.label :password%><br>
    <%= f.password_field :password, class: @user.errors.any? ? "custom_errors" : nil %><br>
    <%= f.label :password%><br>
    <%= f.password_field :password_confirmation, class: @user.errors.any? ? "custom_errors" : nil %><br>
    <%= f.submit %>
<% end %>
    </div>
</section 