<section class="jumbotron text-center">
    <div class="container">
<%= form_with url:'/cocktails', method: "get", local: true do %>
    <%=select_tag 'ingredient_id', options_from_collection_for_select(Ingredient.order(:name).all, :id, :name, params[:ingredient_id]), prompt:"Choose an ingredient"%>
    <%= text_field_tag :search, params[:search], placeholder: "Cocktail Name"%>
    <%= submit_tag "Search"%>
<% end %>
<br>
<% if params[:search] %>
    <h1>Your Seach Results:</h1>
    <%if @cocktails.empty? %>
        <h4>There are no cocktails found<h4>
    <% end %>
<% else %>
    <h1> All Cocktails! </h1>
<% end %>
 <% @cocktails.each do |cocktail| %>
    <li> <%= link_to cocktail.name, cocktail_path(cocktail) %></li>
<% end %>
